  <div class="row">  
    <aside class="col-sm-4">
      <h3>ライブ作成</h3>
      <%= form_with(model: @micropost, local: true) do |f| %>
        <div class="form-group">
          <a>アーティスト</a>
          <%= f.text_field :content, class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
          <a>日時</a>
          <%= f.datetime_field :livedatetime, class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
          <a>会場</a>
          <%= f.text_field :liveplace, class: 'form-control', rows: 5 %>
        </div>        
        
        <%= f.submit '作成', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
  </div>